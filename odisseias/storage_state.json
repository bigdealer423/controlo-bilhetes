from playwright.sync_api import sync_playwright

def guardar_sessao():
    with sync_playwright() as p:
        browser = p.chromium.launch(headless=False)
        context = browser.new_context()
        page = context.new_page()
        page.goto("https://www.odisseias.com/Account/Login", timeout=60000)

        print("🔑 Faz login manualmente no browser aberto.")
        print("❗ Fecha a janela do browser quando o login estiver feito.")

        page.wait_for_timeout(1000000)  # Espera até fechares
        context.storage_state(path="storage_state.json")
        print("✅ Sessão guardada em storage_state.json")

if __name__ == "__main__":
    guardar_sessao()
